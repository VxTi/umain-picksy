{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Picksy",
	"version": "0.1.0",
	"identifier": "com.umain-picksy.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Picksy",
				"width": 1280,
				"height": 800,
				"hiddenTitle": true,
				"decorations": false
			}
		],
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": {
					"allow": ["$HOME/**"]
				}
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"resources": [".env"],
		"macOS": {
			"infoPlist": "Info.plist"
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
